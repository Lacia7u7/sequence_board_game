{
  "rules": {
    "mode": "1v1",
    "teams": 2,
    "players_per_team": 1,
    "hand_size": 7,
    "allowAdvancedJack": false,
    "win_sequences_needed": 2,
    "reset_full_board_no_winner": false
  },
  "engine": {
    "use_cuda_sequences": true,
    "reshuffle_on_empty_deck": true
  },
  "observation": {
    "use_lstm": true,
    "history_k": 5,
    "channels": {
      "team_chips": true,
      "playable_mask_self": true,
      "team_sequences": true,
      "corner_mask": true,
      "static_card_17ch": true,
      "threats_len4_opponent": true,
      "extendable_len3_self": true,
      "jack_remove_targets": true,
      "p_cell_playable_next": true,
      "p_cell_playable_k": [],
      "p_opponent_targets_next": true
    }
  },
  "action_space": {
    "type": "unified",
    "max_hand": 7,
    "include_pass": false
  },
  "training": {
    "algorithm": "ppo_lstm",
    "seed": 42,
    "num_envs": 1,
    "rollout_length": 64,
    "total_updates": 2,
    "gamma": 0.99,
    "gae_lambda": 0.95,
    "lr": 0.0003,
    "clip_eps": 0.2,
    "entropy_coef": 0.01,
    "value_coef": 0.5,
    "max_grad_norm": 0.5,
    "amp": false,
    "minibatch_size": 256,
    "opponent_pool": {
      "current": 1.0,
      "snapshots": 1.0,
      "heuristics": 1.0
    },
    "episode_cap": 200
  },
  "model": {
    "conv_channels": [
      32,
      32,
      64
    ],
    "lstm_hidden": 64,
    "lstm_layers": 2,
    "value_tanh_bound": 5.0
  },
  "logging": {
    "tensorboard": true,
    "csv": true,
    "jsonl": true,
    "log_private_hands_locally": true,
    "logdir": "runs/smoke/full"
  },
  "evaluation": {
    "elo": true,
    "trueskill": true,
    "eval_interval_updates": 2,
    "opponent_snapshots_keep": 2,
    "benchmark_agents": [
      "agents/baseline/blocking_agent.py"
    ],
    "evaluated_agents": [
      "agents/training/ppo_lstm_agent.py"
    ],
    "teams": 2,
    "agents_per_team": 1,
    "agent_kwargs": {
      "agents/training/ppo_lstm_agent.py": {
        "policy_path": "runs/smoke/full/policy_final.pt",
        "deterministic": true
      }
    },
    "episodes": 200
  },
  "rewards": {
    "illegal": -0.01,
    "win": 1.0,
    "loss": -1.0,
    "seq_bonus": 0.3,
    "step_penalty": 0.0,
    "open4_self": 0.05,
    "open4_opp": 0.05,
    "open3_self": 0.01,
    "open3_opp": 0.01
  }
}