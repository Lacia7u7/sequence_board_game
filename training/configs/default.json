{
  "rules": {
    "mode": "2v2",
    "teams": 2,
    "players_per_team": 2,
    "hand_size": 6,
    "allowAdvancedJack": false,
    "win_sequences_needed": 2,
    "reset_full_board_no_winner": true
  },
  "engine": {
    "use_cuda_sequences": true,
    "reshuffle_on_empty_deck": true
  },
  "observation": {
    "use_lstm": true,
    "history_k": 0,
    "channels": {
      "team_chips": true,
      "playable_mask_self": true,
      "team_sequences": true,
      "corner_mask": true,
      "static_card_17ch": true,
      "threats_len4_opponent": true,
      "extendable_len3_self": true,
      "jack_remove_targets": true,
      "p_cell_playable_next": true,
      "p_cell_playable_k": [
        2,
        3,
        4,
        5,
        6
      ],
      "p_opponent_targets_next": true
    }
  },
  "action_space": {
    "type": "unified",
    "max_hand": 7,
    "include_pass": false
  },
  "training": {
    "algorithm": "ppo_lstm",
    "seed": 123,
    "num_envs": 4,
    "rollout_length": 32,
    "total_updates": 10,
    "gamma": 0.997,
    "gae_lambda": 0.95,
    "lr": 0.00025,
    "clip_eps": 0.2,
    "entropy_coef": 0.015,
    "value_coef": 0.5,
    "max_grad_norm": 1.0,
    "amp": false,
    "opponent_pool": {
      "current": 0.6,
      "snapshots": 0.3,
      "heuristics": 0.1
    },
    "episode_cap": 400
  },
  "model": {
    "conv_channels": [
      64,
      64,
      128,
      128
    ],
    "lstm_hidden": 256,
    "lstm_layers": 1
  },
  "logging": {
    "tensorboard": false,
    "csv": true,
    "jsonl": false,
    "log_private_hands_locally": false,
    "logdir": "runs/exp1"
  },
  "evaluation": {
    "elo": true,
    "trueskill": true,
    "eval_interval_updates": 5,
    "opponent_snapshots_keep": 5
  }
}