{
  "rules": {
    "mode": "2v2",
    "teams": 2,
    "players_per_team": 2,
    "hand_size": 6,
    "allowAdvancedJack": false,
    "win_sequences_needed": 2,
    "reset_full_board_no_winner": true
  },
  "engine": {
    "use_cuda_sequences": true,
    "reshuffle_on_empty_deck": true
  },
  "observation": {
    "use_lstm": true,
    "history_k": 0,
    "channels": {
      "team_chips": true,
      "playable_mask_self": true,
      "team_sequences": true,
      "corner_mask": true,
      "static_card_17ch": true,
      "threats_len4_opponent": true,
      "extendable_len3_self": true,
      "jack_remove_targets": true,
      "p_cell_playable_next": true,
      "p_cell_playable_k": [
        2,
        3,
        4,
        5,
        6
      ],
      "p_opponent_targets_next": true
    }
  },
  "action_space": {
    "type": "unified",
    "max_hand": 7,
    "include_pass": false
  },
  "training": {
    "algorithm": "ppo_lstm",
    "seed": 123,
    "num_envs": 4,
    "rollout_length": 32,
    "total_updates": 10,
    "gamma": 0.997,
    "gae_lambda": 0.95,
    "lr": 0.00025,
    "clip_eps": 0.2,
    "entropy_coef": 0.015,
    "value_coef": 0.5,
    "max_grad_norm": 1.0,
    "amp": false,
    "opponent_pool": {
      "current": 0.6,
      "snapshots": 0.3,
      "heuristics": 0.1
    },
    "episode_cap": 400,
    "snapshot_every": 100,
    "max_snapshots": 15,
    "pool_probabilities": {"current": 0.05, "snapshots": 0.7, "heuristics": 0.25}
  },
  "model": {
    "conv_channels": [
      64,
      64,
      128,
      128
    ],
    "lstm_hidden": 256,
    "lstm_layers": 1
  },
  "logging": {
    "tensorboard": false,
    "csv": true,
    "jsonl": false,
    "log_private_hands_locally": false,
    "logdir": "runs/exp1"
  },
  "evaluation": {
    "elo": true,
    "trueskill": true,
    "eval_interval_updates": 5,
    "opponent_snapshots_keep": 5
  },
  "rewards": {
    "illegal": -0.01,
    "win": 1.0,
    "loss": -1.0,
    "seq_bonus": 0.25,
    "step_penalty": 0.0,
    "open4_self": 0.03,
    "open4_opp": 0.03,
    "open3_self": 0.007,
    "open3_opp": 0.007
  },
  "rewards_extra": {
    "imm_win_self": 0.03,
    "imm_win_opp": 0.03,
    "fork_self": 0.03,
    "fork_opp": 0.03,
    "run_self": 0.01,
    "run_opp": 0.01,
    "open2_self": 0.005,
    "open2_opp": 0.005,
    "closed4_breaker": 0.03,
    "jack_remove_impact": 0.02,
    "wild_efficiency": 0.08,
    "hot_control_self": 0.002,
    "hot_control_opp": 0.002,
    "center_control": 0.005,
    "corner_synergy": 0.005,
    "coverage_cut": 0.005,
    "redundancy_penalty": 0.02,
    "protected_chips": 0.01,
    "jack_vuln_self": 0.01,
    "jack_vuln_opp": 0.01,
    "blunder": 0.05,
    "mobility": 0.0005,
    "discard_ev": 0.005,
    "early_finish_bonus": 0.25
  },
  "shaping": {
    "use_potential": true,
    "per_term_clip": 0.25,
    "global_clip": 0.5,
    "anneal_total_env_steps": 200000,
    "anneal_min_scale": 0.0
  },
  "performance":{
        "use_torch_features": true,
        "device": "cuda",
        "dtype": "float32"
  }
}