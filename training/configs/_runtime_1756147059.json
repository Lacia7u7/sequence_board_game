{
  "rules": {
    "mode": "1v1",
    "teams": 2,
    "players_per_team": 1,
    "hand_size": 5,
    "allowAdvancedJack": false,
    "win_sequences_needed": 2,
    "reset_full_board_no_winner": false
  },
  "engine": {
    "use_cuda_sequences": false,
    "reshuffle_on_empty_deck": true
  },
  "observation": {
    "use_lstm": false,
    "history_k": 0,
    "channels": {
      "team_chips": true,
      "playable_mask_self": true,
      "team_sequences": true,
      "corner_mask": true,
      "static_card_17ch": true,
      "threats_len4_opponent": false,
      "extendable_len3_self": false,
      "jack_remove_targets": false,
      "p_cell_playable_next": false,
      "p_cell_playable_k": [],
      "p_opponent_targets_next": false
    }
  },
  "action_space": {
    "type": "unified",
    "max_hand": 5,
    "include_pass": false
  },
  "training": {
    "algorithm": "ppo_lstm",
    "seed": 42,
    "num_envs": 8,
    "rollout_length": 32,
    "total_updates": 10000,
    "gamma": 0.99,
    "gae_lambda": 0.95,
    "lr": 0.001,
    "clip_eps": 0.2,
    "entropy_coef": 0.01,
    "value_coef": 0.5,
    "max_grad_norm": 0.5,
    "amp": false,
    "opponent_pool": {
      "current": 1.0,
      "snapshots": 0.0,
      "heuristics": 0.0
    },
    "episode_cap": 200,
    "minibatch_size": 512
  },
  "model": {
    "conv_channels": [
      32,
      32,
      64
    ],
    "lstm_hidden": 128,
    "lstm_layers": 1
  },
  "logging": {
    "tensorboard": true,
    "csv": true,
    "jsonl": false,
    "log_private_hands_locally": false,
    "logdir": "runs/smoke"
  },
  "evaluation": {
    "elo": false,
    "trueskill": false,
    "eval_interval_updates": 0,
    "opponent_snapshots_keep": 0
  }
}