{
  "rules": {
    "mode": "1v1",
    "teams": 2,
    "players_per_team": 1,
    "hand_size": 7,
    "allowAdvancedJack": true,
    "win_sequences_needed": 1,
    "reset_full_board_no_winner": false
  },
  "engine": {
    "use_cuda_sequences": false,
    "reshuffle_on_empty_deck": true
  },
  "observation": {
    "use_lstm": false,
    "history_k": 2,
    "channels": {
      "team_chips": true,
      "playable_mask_self": true,
      "team_sequences": true,
      "corner_mask": true,
      "static_card_17ch": true,
      "threats_len4_opponent": true,
      "extendable_len3_self": true,
      "jack_remove_targets": true,
      "p_cell_playable_next": true,
      "p_cell_playable_k": [
        2,
        3
      ],
      "p_opponent_targets_next": true
    }
  },
  "action_space": {
    "type": "unified",
    "max_hand": 7,
    "include_pass": true
  },
  "training": {
    "algorithm": "ppo_lstm",
    "seed": 999,
    "num_envs": 2,
    "rollout_length": 4,
    "total_updates": 2,
    "gamma": 0.9,
    "gae_lambda": 0.9,
    "lr": 0.0005,
    "clip_eps": 0.3,
    "entropy_coef": 0.0,
    "value_coef": 0.5,
    "max_grad_norm": 0.5,
    "amp": false,
    "opponent_pool": {
      "current": 1.0,
      "snapshots": 0.0,
      "heuristics": 0.0
    },
    "episode_cap": 100
  },
  "model": {
    "conv_channels": [
      16,
      32,
      64
    ],
    "lstm_hidden": 64,
    "lstm_layers": 1
  },
  "logging": {
    "tensorboard": false,
    "csv": true,
    "jsonl": true,
    "log_private_hands_locally": true,
    "logdir": "runs/debug"
  },
  "evaluation": {
    "elo": false,
    "trueskill": false,
    "eval_interval_updates": 0,
    "opponent_snapshots_keep": 0
  }
}