rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{uid}.** {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    match /weights/{matchId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
